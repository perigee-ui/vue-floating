{
  // "extends": "@vue/tsconfig/tsconfig.dom.json",
  "extends": "@perigee-ui/typescript-config/tsconfig.options.json",
  "include": [
    "env.d.ts",
    "src/**/__tests__/*"
  ],
  "references": [{"path": "./tsconfig.app.json"}],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "jsdom",
      "@vitest/browser/matchers"
    ]
  },
}
